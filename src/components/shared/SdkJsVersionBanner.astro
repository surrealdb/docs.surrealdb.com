---
import {
    getVersionFromPath,
} from '@src/util/sdkJsVersion';

interface Props {
    currentPath: string;
}

const { currentPath } = Astro.props;
const currentVersion = getVersionFromPath(currentPath);

// Only show banner on v1 pages
const showBanner = currentVersion === '1.x';
---

{showBanner && (
    <div class="mb-4 p-3 bg-surreal-energy/10 border border-surreal-energy/30 rounded-lg text-sm">
        <div class="flex items-center justify-between gap-2 flex-wrap">
            <span class="text-text/80">
                A newer version (v2) of the JavaScript SDK is available
            </span>
            <a
                href="/docs/sdk/javascript"
                class="text-surreal-energy hover:underline font-medium whitespace-nowrap"
                data-version-override="latest"
            >
                View v2.x docs â†’
            </a>
        </div>
    </div>
)}
