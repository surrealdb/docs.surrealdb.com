---
import RenderSidebarGroup, {
    type SidebarGroup,
} from './RenderSidebarGroup.astro';
import RenderSidebarLink, { type SidebarLink } from './RenderSidebarLink.astro';
import RenderSidebarSection from './RenderSidebarSection.astro';

export type SidebarItem = { top?: boolean } & (SidebarLink | SidebarGroup);
export type Props = SidebarItem;
---

{
    Astro.props.items && Astro.props.items.length > 0 
        ? Astro.props.top 
			? <RenderSidebarSection {...Astro.props} />
			: <RenderSidebarGroup {...Astro.props} />
        : <RenderSidebarLink {...Astro.props} />
}