---
import Image from '@components/Image.astro';
import DarkLogo from '@img/logo/dark/docs.svg';
import LightLogo from '@img/logo/light/docs.svg';
import Search from '@src/components/Search.astro';
import { Icon } from 'astro-icon/components';
---

<style>
    div:has(~ div .flag-sidebar-container) .sidebar-toggle {
        @apply max-lg:block;
    }
</style>

<input type="checkbox" id="sidebar-toggle" class="hidden" />
<div class="h-14 min-h-14 border-b border-border bg-background flex items-center">
	<div class="lg:w-[350px] flex-shrink-0 pl-10">
		<div class="flex items-center gap-5 pr-2">
			<label for="sidebar-toggle" class="hidden cursor-pointer sidebar-toggle">
				<Icon name="fa6-solid:bars" class="w-5 h-5" />
			</label>
			<a href={import.meta.env.BASE_URL}>
				<Image
					class="block h-6"
					alt="SurrealDB Docs Logo"
					width={400}
					src={{
						light: LightLogo,
						dark: DarkLogo,
					}}
				/>
			</a>
		</div>
	</div>
	<div class="flex-1">
		<div class="max-w-[960px] mx-auto px-2">
			<Search />
		</div>
	</div>
	<div class="w-[350px] hidden 3xl:flex pr-10 justify-end">
		<a 
			class="group flex items-center gap-1.5 text-surreal-pink"
			href="/"
			rel="nofollow"
		>
			<Icon name="fa6-solid:arrow-left" class="w-4 transition-transform group-hover:-translate-x-1" />
			SurrealDB.com
		</a>
	</div>
</div>
