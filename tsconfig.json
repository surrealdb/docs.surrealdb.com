{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@theme/*": ["src/compat/theme/*"],
            "@layout/*": ["src/layout/*"],
            "@content/*": ["src/content/*"],
            "@img/*": ["src/assets/img/*"],
            "@config/*": ["config/*"]
        },
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "exclude": ["dist/**"]
}
